<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.examples.akshay.wifip2p.MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/main_activiy_textView_wifi_p2p_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="P2P Status" />

    <TextView
        android:id="@+id/main_activiy_textView_dicovery_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status" />

    <TextView
        android:id="@+id/main_activiy_textView_connection_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status" />

    <Button
        android:id="@+id/main_activity_button_discover_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="START DISCOVERY" />


    <Button
        android:id="@+id/main_activity_button_discover_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STOP DISCOVERY" />

    <Button
        android:id="@+id/main_activity_button_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect" />


    <TextView
        android:id="@+id/textView_available_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available devices" />

    <ListView
        android:id="@+id/main_activity_list_view_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_activity_button_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Server" />

        <Button
            android:id="@+id/main_activity_button_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Client" />
    </LinearLayout>

</LinearLayout>
